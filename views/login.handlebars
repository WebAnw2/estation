<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-md-auto custom-width">

            <h3>LOGIN</h3>
            {{#if success_msg}}
                <div class="alert alert-success">{{success_msg}}</div>
            {{/if}}

            {{#if error_msg}}
                <div class="alert alert-danger">{{error_msg}}</div>
            {{/if}}
            <div class="login-custom">
                <h4>Please enter your data!</h4>
                <form class="formLogin" role="form"
                                        action="/login?form=login" method="POST">
                   <input type="hidden" name="_csrf" value="{{csrf}}">

                    <div class="form-group">
                        <label for="fieldUsername" class="col-sm-6 control-label">Username</label>
                        <div class="col-md-auto">
                            <input type="text" class="form-control" id="fieldUsername" name="loginUser">
                        </div>
                    </div> <!-- End of form-group -->

                    <div class="form-group">
                        <label for="fieldPassword" class="col-sm-2 control-label">Password</label>
                        <div class="col-md-auto">
                            <input type="password" class="form-control" id="fieldPassword" name="loginPass">
                        </div>
                    </div> <!-- End of form-group -->

                    <div class="form-group">
                        <div class="col-md-auto">
                            <button type="submit" class="btn btn-default login-btn">Submit</button>
                        </div>
                    </div> <!-- End of form-group -->

                </form>

            </div> <!-- End of contactUs -->
        </div>
</div>

